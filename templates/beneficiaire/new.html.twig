{% extends 'base.html.twig' %}

{% block title %}Bénéficiaires{% endblock %}

{% block body %}
<div class="main">

    {{ include('include/_navigation.html.twig') }}

    <div class="content">

        <div class="container">
            {% for message in app.flashes('success') %}
                <div class="alert success-alert">
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('danger') %}
                <div class="alert danger-alert">{{ message }}</div>
            {% endfor %}
            <h4>Ajout un lot de bénéficiaire</h4>

            <div class="lot-controleur">

                <h3>Ajout d'un lot</h3>
                {{ form_start(form) }}
                {{ form_row(form.fichier) }}
                    <label for="file">Format fichier excel seulement</label>
                <button class="buttongreen">Ajouter le lot</button>
                {{ form_end(form) }}
            </div>

        </div>

    </div>

</div>
{% endblock %}
