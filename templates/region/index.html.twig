{% extends 'base.html.twig' %}

{% block title %}Region{% endblock %}

{% block body %}
    <div class="main">
        {{ include('include/_navigation.html.twig') }}
        <div class="content">
            <div class="container">
                {% for message in app.flashes('success') %}
                    <div class="alert success-alert">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('danger') %}
                    <div class="alert danger-alert">{{ message }}</div>
                {% endfor %}
                <h4>Les régions</h4>


                <div class="addanddelete">
                    <div class="addicon"style="margin-left: 90%">
                        <a href="{{ path('region_new') }}">
                            <i class="far fa-plus-square fa-3x"></i>
                        </a>

                    </div>

                </div>



            <div class="table">
                <table>
                    <tr class="table-title">

                        <th class="table-title-speciality">Nom</th>
                        <th class="table-title-speciality table-edit">Editer</th>
                        <th class="table-title-speciality table-delete">Supprimer</th>
                    </tr>
                    {% for reg in regions %}
                        <tr>

                            <td class="table-name">{{ reg.name }} </td>
                            <td class="table-name">
                                <div class="addicon">
                                    <a href="{{ path('region_edit', {'id': reg.id}) }}">
                                        <i class="fas fa-edit fa-2x"></i>
                                    </a>
                                </div>
                            </td>
                            <td><form method="post" action="{{ path('region_delete', {'id': reg.id}) }}" onsubmit="return confirm('êtes vous sûr de vouloir supprimer cette région');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reg.id) }}">
                                    <button class="btn"><span class="delicon">
                                        <i class="fas fa-trash fa-3x"></i>
                                    </span></button>
                                </form>

                            </td>

                        </tr>
                    {% endfor %}
                </table>
            </div>
            </div>
        </div>
    </div>


{% endblock %}
