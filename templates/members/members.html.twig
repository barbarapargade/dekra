{% extends 'base.html.twig' %}

{% block title %}DEKRA{% endblock %}
{% block body %}

    <div class="main">
        {{ include('include/_navigation.html.twig') }}
        <div class="content">
            <div class="container">
                {% for message in app.flashes('success') %}
                    <div class="alert success-alert">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('danger') %}
                    <div class="alert danger-alert">{{ message }}</div>
                {% endfor %}

                <h4>Les membres</h4>
                <div class="search-container">
                    <div class="search-input">
                        <form id="filters">
                            <input class="members-search" id="members-search" type="text"
                                   placeholder="Rechercher un membre">
                        </form>
                    </div>
                    <div class="addanddelete">
                        <div class="addicon">
                            <a href="{{ path('user_new') }}"><i class="far fa-plus-square fa-3x"></i></a>
                        </div>

                    </div>
                </div>
                    <div class="response-content" id="response-content">
                        {{ include('include/_membersContent.html.twig') }}
                    </div>
                <div class="pagination">
                    <div class="navigation-knp">
                        {{ knp_pagination_render(users) }}
                    </div>

                </div>
            </div>


        </div>
    </div>
{% endblock %}
{% block javascripts %}
     <script src="{{ asset('js/membersSearch.js') }}"></script>
{% endblock %}