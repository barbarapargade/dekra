{% extends 'base.html.twig' %}

{% block title %}Membres{% endblock %}

{% block body %}
    <div class="main">

        {{ include('include/_navigation.html.twig') }}

        <div class="content">

            <div class="container">
                {% for message in app.flashes('success') %}
                    <div class="alert success-alert">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('danger') %}
                    <div class="alert danger-alert">{{ message }}</div>
                {% endfor %}
                <h4>Modifier un membre</h4>

                {{ form_start(form) }}
                <div class="profil">
                    <div class="name">
                        <p>Nom</p>
                        {{ form_row(form.name) }}
                    </div>
                    <div class="mdp">
                        <p>Région</p>
                        {% for r in user.roles | slice(0,1) %}{{ r }} {%  endfor %}
                       {{ form_row(form.region) }}
                    </div>
                    <div class="mail">
                        <p>Email</p>
                        {{ form_row(form.email) }}
                    </div>
                    <div class="mdp-confirm">
                        <p>niveau d'accès</p>
                    {{ form_row(form.roles) }}
                    </div>
                    <button type="submit" class="buttongreen">Enregistrer</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

    </div>



{% endblock %}
