{% extends 'base.html.twig' %}

{% block title %}Contrôleurs{% endblock %}

{% block body %}
    <div class="main">
        {{ include('include/_navigation.html.twig') }}
        <div class="content">
            <div class="container">
                <div class="titlereturn">
                    <h4>Modifier le contrôleur</h4>
                    <a href="{{ path('controleur_index') }}" class="buttonreturn"><i class="fas fa-undo"></i> Retour</a>
                </div>
                {{ form_start(form) }}
                <div class="profil">
                    <div class="name">
                        <p>Numéro</p>
                        {{ form_row(form.nom) }}
                    </div>
                    <div class="name">
                        <p>Nom</p>
                        {{ form_row(form.prenom) }}
                    </div>
                    <div class="name">
                        <p>Numéro</p>
                        {{ form_row(form.departement,{'label': false}) }}
                    </div>
                    <div class="name">
                        <p>Nom</p>
                        {{ form_row(form.specialite,{'label': false}) }}
                    </div>

                    <button type="submit" class="buttongreen">Enregistrer</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

    </div>

    {{ include('controleur/_delete_form.html.twig') }}
{% endblock %}
