{% extends 'base.html.twig' %}

{% block title %}Contrôleurs{% endblock %}

{% block body %}
    <div class="main">

        {{ include('include/_navigation.html.twig') }}

        <div class="content">

            <div class="container">
                {% for message in app.flashes('success') %}
                    <div class="alert success-alert">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('danger') %}
                    <div class="alert danger-alert">{{ message }}</div>
                {% endfor %}
                <h4>Nouveau Controleur</h4>

                {{ form_start(form) }}
                <div class="profil">
                    <div class="name">
                        <p>Nom</p>
                        {{ form_row(form.nom) }}
                    </div>
                    <div class="name">
                        <p>Nom</p>
                        {{ form_row(form.prenom) }}
                    </div>
                    <div class="name">
                        <p>Numéro</p>
                        {{ form_row(form.departement) }}
                    </div>
                    <div class="name">
                        <p>Nom</p>
                        {{ form_row(form.specialite) }}
                    </div>

                    <button type="submit" class="buttongreen">Ajouter</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>

    </div>

{% endblock %}
