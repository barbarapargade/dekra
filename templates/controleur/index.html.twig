{% extends 'base.html.twig' %}

{% block title %}Contrôleurs{% endblock %}

{% block body %}
    <div class="main">
        {{ include('include/_navigation.html.twig') }}
        <div class="content">
            <div class="container">
                {% for message in app.flashes('success') %}
                    <div class="alert success-alert">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('danger') %}
                    <div class="alert danger-alert">{{ message }}</div>
                {% endfor %}
                <h4>Les contrôleurs CEE</h4>

                <div class="search-container">
                    {{ form_start(form) }}
                    <div class="search-controleurs">

                        {{ form_row(form.name, {'attr': {'class': 'search-container-select'}}) }}
                        {{ form_row(form.specialite, {'attr': {'class': 'search-container-select'}}) }}
                        <button class="btn-submit" type="submit"><i class="fa fa-search fa-2x" aria-hidden="true"></i>
                        </button>
                    </div>
                    {{ form_end(form) }}
                    <div class="addanddelete">
                        <div class="addicon">
                            <a href="{{ path('controleur_new') }}">
                                <i class="far fa-plus-square fa-3x"></i>
                            </a>
                        </div>
                    </div>
                </div>


                <div class="table">
                    <table>
                        <tr class="table-title">
                            <th class="table-title-name">Nom du contrôleur</th>
                            <th class="table-title-department">Départements</th>
                            <th class="table-title-name">Spécialitées</th>
                            <th class="table-title-speciality table-edit">Editer</th>
                            <th class="table-title-speciality table-delete">Supprimer</th>
                        </tr>

                        {% for controleur in controleurs %}
                            <tr>
                                <td class="table-name">{{ controleur.nom }} {{ controleur.prenom }}</td>
                                <td class="table-department">
                                    <div class="tags-spe">
                                        {% for dep in controleur.departement %}
                                            <p>{{ dep.numero }}</p>
                                        {% endfor %}
                                    </div>
                                </td>
                                <td class="table-speciality">
                                    <div class="tags">
                                        {% for spe in controleur.specialite %}
                                            <p>{{ spe.name }}</p>
                                        {% endfor %}
                                    </div>
                                </td>

                                <td class="table-name">
                                    <div class="addicon">
                                        <a href="{{ path('controleur_edit', {'id': controleur.id}) }}">
                                            <i class="fas fa-edit fa-2x"></i>
                                        </a>
                                    </div>
                                </td>
                                <td>
                                    <form method="post" action="{{ path('controleur_delete', {'id': controleur.id}) }}"
                                          onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="_token"
                                               value="{{ csrf_token('delete' ~ controleur.id) }}">
                                        <button class="btn">
                                            <i class="fas fa-trash fa-3x"></i></button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </table>
                </div>
                <div class="pagination">
                    <div class="navigation-knp">
                        {{ knp_pagination_render(controleurs) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}
