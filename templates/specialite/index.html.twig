{% extends 'base.html.twig' %}

{% block title %}Specialitées{% endblock %}


    {% block body %}
        <div class="main">

            {{ include('include/_navigation.html.twig') }}
            <div class="content">


                <div class="container">
                    {% for message in app.flashes('success') %}
                        <div class="alert success-alert">
                            {{ message }}
                        </div>
                    {% endfor %}
                    {% for message in app.flashes('danger') %}
                        <div class="alert danger-alert">{{ message }}</div>
                    {% endfor %}
                    <h4>Les spécialitées</h4>


                    <div class="addanddelete">
                        <div class="addicon" style="margin-left: 90%">
                            <a href="{{ path('specialite_new') }}">
                                <i class="far fa-plus-square fa-3x"></i>
                                </a>

                        </div>

                    </div>



                <div class="table">
                    <table>
                        <tr class="table-title">

                            <th class="table-title-speciality">Spécialitées</th>
                            <th class="table-title-speciality table-edit">Editer</th>
                            <th class="table-title-speciality table-delete">Supprimer</th>
                        </tr>
                        {% for spe in specialites %}
                            <tr>

                                <td class="table-name">{{ spe.name }} </td>
                                <td class="table-name">
                                        <div class="addicon" >
                                            <a style="background-color: transparent; border: none;" href="{{ path('specialite_edit', {'id': spe.id}) }}">
                                                <i class="fas fa-edit fa-2x"></i>
                                            </a>
                                        </div>
                                    </td>
                                <td>
                                    <form method="post" action="{{ path('specialite_delete', {'id': spe.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ spe.id) }}">
                                        <button class="btn">
                                            <i class="fas fa-trash fa-3x"></i>
                                            </button>
                                    </form>

                                </td>

                            </tr>
                        {% endfor %}
                    </table>
                </div>
                </div>
            </div>
        </div>


        {# <a href="{{ path('controleur_new') }}">Create new</a> #}




        <a href="{{ path('specialite_new') }}">Create new</a>
    {% endblock %}
