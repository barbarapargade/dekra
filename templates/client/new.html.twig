{% extends 'base.html.twig' %}

{% block title %}CLients{% endblock %}

{% block body %}
    <div class="main">

        {{ include('include/_navigation.html.twig') }}

        <div class="content">

            <div class="container">
                {% for message in app.flashes('success') %}
                    <div class="alert success-alert">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('danger') %}
                    <div class="alert danger-alert">{{ message }}</div>
                {% endfor %}
                <h4>Ajout d'un client</h4>
                {{ form_start(form) }}
                <div class="profil">
                    <div class="name">
                        <p>Nom du client</p>
                        {{ form_row(form.name) }}
                        {# <input type="text" placeholder="Nom"> #}
                    </div>
                    {# <div class="mail"> #}
                    {# <p>Numéro de téléphone</p> #}
                    {# <input type="tel" placeholder="Numéro de téléphone"> #}
                    {# </div> #}
                    <div class="mail">
                        <p>Adresse mail</p>
                        {{ form_row(form.email) }}
                        {# <input type="email" placeholder="manon@entreprise.com"> #}
                    </div>

                    {# <div class="benef-select"> #}
                    {# <p>Nom des bénéficiaires</p> #}
                    {# <select> #}
                    {# <option class="tags">Jean Michel Jarre</option> #}
                    {# <option>Jean Michel Machin</option> #}
                    {# <option>Jean Claude Van Dam</option> #}
                    {# <option>Jen charles Jacoswki</option> #}
                    {# </select> #}
                    {# </div> #}
                    <div>
                        <button class="buttongreen">Ajouter un client</button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>

        </div>

    </div>
{% endblock %}