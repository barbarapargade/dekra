{% extends 'base.html.twig' %}

{% block title %}CLients{% endblock %}

{% block body %}
    <div class="main">

        {{ include('include/_navigation.html.twig') }}

        <div class="content">

            <div class="container">
                {% for message in app.flashes('success') %}
                    <div class="alert success-alert">
                        <p>{{ message }}</p>
                    </div>
                {% endfor %}
                {% for message in app.flashes('danger') %}
                    <div class="alert danger-alert">{{ message }}</div>
                {% endfor %}
                <h4>Les clients</h4>
                <div class="search-container">
                    <div class="search-input">
                        <form id="filters">
                            <input class="members-search" id="members-search" type="text"
                                   placeholder="Rechercher un client">
                        </form></div>
                    <div class="addanddelete">
                        <div class="addicon">
                            <a href="{{ path('client_new') }}"> <i class="far fa-plus-square fa-3x"></i></a>

                        </div>

                    </div>
                </div>
                <div class="table" id="response-content">
                    {{ include('include/_clientContent.html.twig') }}
                </div>
                <div class="pagination">
                    <div class="navigation">
                        {{ knp_pagination_render(clients) }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
{% block javascripts %}
<script src="{{ asset('js/ClientSearch.js') }}"></script>
{% endblock %}
