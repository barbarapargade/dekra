{% extends 'base.html.twig' %}
{% block title %}DEKRA{% endblock %}
{% block body %}
    <div class="main">
        {{ include('include/_navigation.html.twig') }}
        <div class="content">
            <div class="welcome-container">
                {% for message in app.flashes('success') %}
                    <div class="alert success-alert">
                        {{ message }}
                    </div>
                {% endfor %}
                {% for message in app.flashes('danger') %}
                    <div class="alert danger-alert">{{ message }}</div>
                {% endfor %}
                  {% if is_granted('ROLE_SUPER_ADMIN') %}
                {{ include('include/_superAdminAccueilView.html.twig') }}
                 {% endif %}
                {% if is_granted('ROLE_ADMIN') %}
                    {{ include('include/_adminAcceuilView.html.twig') }}
                {% endif %}
                {% if is_granted('ROLE_CLIENT') %}
                    {{ include('include/_clientAcceuilView.html.twig') }}
                {% endif %}
                {% if is_granted('ROLE_CALL_CENTER') %}
                    {{ include('include/_callCenterAcceuilView.html.twig') }}
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}
